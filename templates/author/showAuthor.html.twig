{% extends 'base.html.twig' %}

{% block title %}Détails de l'auteur{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Détails de l'auteur</h1>
    {% if author is defined %}
        <div>ID : {{ author.id }}</div>
        <div><img src="{{ author.picture }}" alt="{{ author.username }}"></div>
        <div>Nom : {{ author.username }}</div>
        <div>Email : {{ author.email }}</div>
        <div>Nombre de livres : {{ author.nb_books }}</div>
    {% else %}
        <p>Aucun auteur trouvé</p>
    {% endif %}
</div>
</body>
</html>
{% endblock %}
